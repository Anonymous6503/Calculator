<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="end|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40dp"
        android:layout_marginBottom="2pt"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="allClearEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="AC"
                android:textSize="25dp"></Button>

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btnPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="+/-"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/btnDivide"
                android:text="/"
                android:onClick="operatorEvent"
                android:textSize="25dp"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                ></Button>

            <Button
                android:id="@+id/btnMultiply"
                android:text="*"
                android:layout_marginRight="1pt"
                android:onClick="operatorEvent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@color/purple_700"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:textSize="25dp"></Button>

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="8"
                android:textSize="25dp"></Button>

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="25dp"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                ></Button>

            <Button
                android:id="@+id/btnModulo"
                android:text="%"
                android:layout_marginRight="1pt"
                android:onClick="percentEvent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@color/purple_700"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="4"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/btn5"
                android:onClick="numberEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="5"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/btn6"
                android:onClick="numberEvent"
                android:text="6"
                android:textSize="25dp"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                ></Button>

            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:layout_marginRight="1pt"
                android:onClick="operatorEvent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@color/purple_700"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="1"
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/btn2"
                android:onClick="numberEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                android:text="2"
                android:textSize="25dp"></Button>

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="25dp"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueBack"
                ></Button>

            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:layout_marginRight="1pt"
                android:onClick="operatorEvent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@color/purple_700"
                ></Button>

        </TableRow>
        
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn0"
                android:layout_width="52pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="2"
                android:background="@color/blueBack"
                android:text="0"
                android:textSize="25dp"></Button>

            <Button
                android:onClick="numberEvent"
                android:id="@+id/btnDot"
                android:layout_width="52pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="2"
                android:background="@color/blueBack"
                android:text="."
                android:textSize="25dp"></Button>

            <Button
                android:id="@+id/btnEquals"
                android:text="="
                android:textSize="25dp"
                android:onClick="EqualEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="2"
                android:background="@color/blueBack"
                ></Button>

        </TableRow>
    </LinearLayout>
</LinearLayout>